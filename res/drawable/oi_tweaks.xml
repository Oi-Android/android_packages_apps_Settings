<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/oi_tweaks_title"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

     <!-- Display -->
     <PreferenceScreen
         android:key="display_settings"
         android:fragment="com.android.settings.oi.DisplaySettings"
         android:title="@string/display_settings_title"
         android:icon="@drawable/ic_density"/>

    <!-- Animation Controls -->
    <PreferenceScreen
         android:id="@+id/animation_settings"
         android:title="@string/animation_settings_title"
         android:fragment="com.android.settings.oi.AnimationSettings"
         android:icon="@drawable/ic_settings_animations"
         />

    <!-- Recent panel settings -->
    <PreferenceScreen
         android:key="recents_panel"
         android:fragment="com.android.settings.oi.RecentsPanelSettings"
         android:title="@string/recents_panel_title"
         android:icon="@drawable/ic_recents"
         />

    <!-- Floating Window Options -->
    <PreferenceScreen
        android:key="floating_windows"
        android:fragment="com.android.settings.oi.FloatingWindow"
        android:title="@string/category_floating_window"
        android:icon="@drawable/ic_floating"
        settings:advanced="true" />

    <!-- Heads up notifications -->
    <Preference
         android:key="heads_up_enabled"
         android:fragment="com.android.settings.oi.HeadsUpSettings"
         android:title="@string/category_heads_up" 
         android:icon="@drawable/ic_settings_viper" />

    <!-- App Circle sidebar -->
    <PreferenceScreen
        android:key="app_circle_bar"
        android:title="@string/app_circle_bar_title"
        android:fragment="com.android.settings.oi.AppCircleBar"
        android:icon="@drawable/ic_settings_appcirclebar"
        />

    <!-- Gesture anywhere -->
    <PreferenceScreen
        android:key="gesture_anywhere"
        android:title="@string/gesture_anywhere_title"
        android:fragment="com.android.settings.oi.gestureanywhere.GestureAnywhereSettings"
        android:icon="@drawable/ic_settings_gestureanywhere"
        />

    <!-- App sidebar -->
    <PreferenceScreen
        android:key="app_sidebar"
        android:fragment="com.android.settings.oi.AppSidebar"
        android:title="@string/app_sidebar_title"
        android:icon="@drawable/ic_appsidebar"
        />

    <!-- Wakelock blocker -->
    <PreferenceScreen
        android:key="wakelock_blocker"
        android:title="@string/wakelock_blocker_title"
        android:fragment="com.android.settings.oi.WakeLockBlocker"
        android:icon="@drawable/ic_wakelock_blocker"
        />

    <!-- Ad Blocker -->
    <PreferenceScreen
        android:key="hfm_settings"
        android:title="@string/hfm_pref_screen_title"
        android:fragment="com.android.settings.oi.hfm.HfmSettings" 
        android:icon="@drawable/ic_adblocker"
        />

    <!-- Smart Control -->
    <PreferenceScreen
         android:id="@+id/smartcontrol_settings"
         android:title="@string/smartcontrol_settings_title"
         android:fragment="com.android.settings.oi.SmartControl"
         android:icon="@drawable/ic_settings_smartcontrol"
         />

    <!-- Identicons -->
    <PreferenceScreen
        android:id="@+id/identicons"
        android:title="@string/identicons_title"
        android:fragment="com.android.settings.oi.identicons.IdenticonsSettings"
        android:icon="@drawable/ic_settings_identicons" />

</PreferenceScreen>
